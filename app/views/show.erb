<h1><%= @show.title %></h1>

<dl>
  <dt>Network:</dt>
  <dd><%= @show.network %></dd>
  <dt>Years:</dt>
  <% if @show.ending_year == nil %>
    <dd><%= @show.starting_year %> - current</dd>
  <% else %>
    <dd><%= @show.starting_year %> - <%= @show.ending_year %></dd>
  <% end %>
  <dt>Genre:</dt>
  <dd><%= @show.genre %></dd>
</dl>

<p><%= @show.synopsis %></p>

